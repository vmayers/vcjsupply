<h1>Listing users</h1>

<table>
  <tr>
		<th>Name</th>
    <th>Login name</th>
    <th>Administrator</th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
		<td><%= user.name %></td>
    <td><%= user.login_name %></td>
    <td><%= user.administrator %></td>
    <td>
			<%= link_to 'Edit', edit_user_path(user) %> |
    	<%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %>
		</td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New User', new_user_path %>
