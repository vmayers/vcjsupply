<h1>Log in</h1>
<%=	form_tag sessions_path do %>
	<p>
		<%= label_tag	:login_name %><br />
		<%= text_field_tag :login_name, params[:login_name] %>
	</p>
	<p>
		<%= label_tag	:password %><br />
		<%= password_field_tag :password, params[:login_name] %>
	</p>	
	
	<p class="button"><%= submit_tag %></p>
<% end %>